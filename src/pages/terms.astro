<style>
  .policy-container {
    max-width: 800px;
    margin: 80px auto 0;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    color: var(--color-text);
    margin-bottom: 2rem;
  }

  h2 {
    color: var(--color-text);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  section {
    margin-bottom: 2.5rem;
  }

  ul {
    margin-left: 1.5rem;
    margin-top: 0.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .important-notice {
    background-color: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    margin-top: 1.5rem;
    border-left: 4px solid var(--color-primary);
  }

  .important-notice strong {
    color: var(--color-primary);
  }

  section ul {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  section p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }
</style>